#include<bits/stdc++.h>
typedef long long ll;
using namespace std;

int n, m, g;
vector<vector<int>> e(100001);
vector<bool> b(100001, false);

void dfs(int x)
{
    for(int y : e[x])
    {
        if(b[y]) continue;
        b[y] = true;
        dfs(y);
    }
}

int main()
{
    ios::sync_with_stdio(0);
    cin.tie(0);

    cin >> n >> m;
    for(int i = 1; i <= m; i++)
    {
        int u, v;
        cin >> u >> v;
        e[u].push_back(v);
        e[v].push_back(u);
    }

    for(int i = 1; i <= n; i++)
    {
        if(b[i]) continue;
        g++;
        b[i] = true;
        dfs(i);
    }

    g--;
    cout << m + g - n + 1 << ' ' << g;
}
